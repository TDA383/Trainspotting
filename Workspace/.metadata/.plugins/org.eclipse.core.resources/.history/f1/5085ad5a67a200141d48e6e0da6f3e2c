import java.util.concurrent.*;

import TSim.*;

public class TrainSemaphore extends Semaphore {

	private Train t1;
	private Train t2;
	
	public TrainSemaphore(int permits) {
		super(permits);
	}
	
	public void acquire(Train t) throws InterruptedException {
		if (t1 != null) {
			t.changeSpeed(0);
			t1 = t;
		}
		else if (t2 != null) {
			t.changeSpeed(0);
			t2 = t;
		}
		super.acquire();
	}
	
	public void release() {
		super.release();
		t.changeSpeed(t.getSpeed());
		t = null;
	}
}
